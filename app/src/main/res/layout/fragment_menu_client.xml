<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuClientFragment"
    android:background="@android:color/transparent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/menu_BTN_calender"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/buttonColor"
        android:text="calender"
        android:textColor="#000000"
        android:textSize="20dp"></Button>
    <Button
        android:id="@+id/menu_BTN_myEvents"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/menu_BTN_calender"
        android:layout_centerInParent="true"
        android:background="@color/buttonColor"
        android:text="My queues">
    </Button>

    <Button
        android:id="@+id/menu_BTN_prices"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_BTN_myEvents"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/buttonColor"
        android:text="prices"
        android:textColor="#000000"
        android:textSize="20dp"></Button>
    <Button
        android:id="@+id/menu_BTN_Messages"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="massages"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/menu_BTN_prices"
        android:layout_centerInParent="true"
        android:background="@color/buttonColor"
        >
    </Button>
    <Button
        android:id="@+id/menu_BTN_exit"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="exit"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/menu_BTN_Messages"
        android:layout_centerInParent="true"
        android:background="@color/buttonColor"
        >
    </Button>
</RelativeLayout>
</FrameLayout>