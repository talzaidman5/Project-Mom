<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment_Client"
    android:background="@android:color/transparent">

    <EditText
        android:id="@+id/fragment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:hint="Enter your ID:"
        android:inputType="number"
        android:textSize="23dp"
        android:layout_marginTop="20dp"></EditText>

    <EditText
        android:id="@+id/fragment_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:inputType="textCapSentences|textPassword"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/fragment_id"
        android:hint="Password:"
        android:textSize="23dp"></EditText>
    <Button
        android:id="@+id/fragment_BTN_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true"
        android:background="@color/buttonColor"
        android:textSize="23dp"
        android:layout_below="@+id/fragment_password"
        android:textColor="#000000">
    </Button>

</RelativeLayout>