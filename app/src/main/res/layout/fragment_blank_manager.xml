<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuManagerFragment"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/menu_BTN_calender"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/buttonColor"
            android:text="calender">
        </Button>
        <Button
        android:id="@+id/menu_BTN_eventRequest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/menu_BTN_calender"
        android:layout_centerInParent="true"
        android:background="@color/buttonColor"
        android:text="Queues waiting">
    </Button>

        <Button
            android:id="@+id/menu_BTN_closeEvents"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/menu_BTN_eventRequest"
            android:layout_centerInParent="true"
            android:background="@color/buttonColor"
            android:text="close queues">
        </Button>

        <Button
            android:id="@+id/menu_BTN_prices"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="prices"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/menu_BTN_closeEvents"
            android:layout_centerInParent="true"
            android:background="@color/buttonColor"
            >
        </Button>
        <Button
            android:id="@+id/menu_BTN_exit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="exit"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/main_BTN_graph"
            android:layout_centerInParent="true"
            android:background="@color/buttonColor"
            >
        </Button>
        <Button
            android:id="@+id/main_BTN_graph"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="graph"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/menu_BTN_prices"
            android:layout_centerInParent="true"
            android:background="@color/buttonColor"
            >
        </Button>
    </RelativeLayout>
</FrameLayout>