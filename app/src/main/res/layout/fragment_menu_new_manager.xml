<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".MenuNewManagerFragment">

    <TextView
        android:id="@+id/fragment_newManager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Create a new manager"
        android:textColor="#000000"
        android:textSize="28dp"
        app:fontFamily="@font/cagliostro"></TextView>
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel3">

        <TextView
            android:id="@+id/fragment_newManager_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="Phone number:"
            android:textColor="#000000"
            android:textSize="21dp"
            app:fontFamily="@font/cagliostro"></TextView>

        <EditText
            android:id="@+id/fragment_newManager_EDT_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toRightOf="@+id/fragment_newManager_phoneNumber"
            android:ems="11"
            android:textColor="#000000"></EditText>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_below="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_newManager_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="Password:"
            android:textColor="#000000"
            android:textSize="21dp"
            app:fontFamily="@font/cagliostro"></TextView>
    <EditText
        android:id="@+id/fragment_newManager_EDT_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textCapSentences|textPassword"
        android:layout_toRightOf="@+id/fragment_newManager_password"
        android:textColor="#000000">
    </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_below="@+id/fragment_newManager_title"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_newManager_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="ID:"
            android:textColor="#000000"
            android:textSize="21dp"
            app:fontFamily="@font/cagliostro"></TextView>
        <EditText
            android:id="@+id/fragment_newManager_EDT_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:layout_toRightOf="@+id/fragment_newManager_id"
            android:inputType="number"
            android:textColor="#000000">
        </EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/fragment_newManager_BTN_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel2"
        android:layout_centerInParent="true"
        android:layout_marginTop="22dp"
        android:background="@color/buttonColor"
        android:text="log in"
        android:textSize="26dp">

    </Button>
</RelativeLayout>